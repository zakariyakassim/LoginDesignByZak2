        <solid
            android:color="#e6e6e6" />

        <corners
            android:bottomRightRadius="8px"
            android:bottomLeftRadius="8px"
            android:topLeftRadius="8px"
            android:topRightRadius="8px"/>

    </shape>
</item>

<item>
    <shape>
        <solid
            android:color="#ffffff" />

        <corners
            android:bottomRightRadius="8px"
            android:bottomLeftRadius="8px"
            android:topLeftRadius="8px"
            android:topRightRadius="8px"/>

    </shape>
</item>

</selector>



